[Unit]
Description=Add eosimages image as device
Requires=run-mount-installercd.mount
Before=run-mount-squash.mount

[Service]
Type=oneshot
ExecStart=/usr/bin/udisksctl loop-setup -rf /run/mount/installercd/rlxos.sfs
RemainAfterExit=yes
ExecStop=bash -c '/usr/bin/udisksctl loop-delete -b $(losetup -j /run/mount/installercd/rlxos.sfs -O name -n)'

[Install]
RequiredBy=run-mount-squash.mount